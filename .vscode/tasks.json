{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cd src && rake pdf",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Check If Rebuild Container Required",
            "type": "shell",
            "command": "! fish -c true",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "sh",
                    "args": ["-c"]
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Rebuild Container If Required",
            "command": "${command:remote-containers.rebuildContainer}",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOn": [
                "Check If Rebuild Container Required"
            ]
        }
    ]
}